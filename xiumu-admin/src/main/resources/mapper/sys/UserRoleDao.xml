<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xiumu.dao.sys.UserRoleDao">

    <sql id="userRoleQuery">
        <if test=" userRole != null ">
                <if test=" userRole.userId != null  ">
                    and user_id = #{userRole.userId}
                </if>
                <if test=" userRole.roleId != null  ">
                    and role_id = #{userRole.roleId}
                </if>
                <if test=" userRole.createBy != null  and userRole.createBy != ''  ">
                    and create_By = #{userRole.createBy}
                </if>
                <if test=" userRole.updateBy != null  and userRole.updateBy != ''  ">
                    and update_By = #{userRole.updateBy}
                </if>
        </if>
    </sql>

    <select id="selectPage" resultType="com.xiumu.pojo.sys.entity.UserRole">
        select * from sys_user_role
        <where>
            <include refid="userRoleQuery"></include>
            and delete_flag = 0
        </where>
        order by create_time desc
    </select>

    <select id="selectByUserRole" resultType="com.xiumu.pojo.sys.entity.UserRole">
        select * from sys_user_role
        <where>
            <include refid="userRoleQuery"></include>
            and delete_flag = 0
        </where>
        order by create_time desc
    </select>
</mapper>
