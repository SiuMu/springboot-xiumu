<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xiumu.service.sys.dao.UserRoleDao">

    <sql id="userRoleQuery">
        <if test=" userRole != null ">
                <if test=" userRole.userId != null  ">
                    and user_id = #{userRole.userId}
                </if>
                <if test=" userRole.roleId != null  ">
                    and role_id = #{userRole.roleId}
                </if>
        </if>
    </sql>

    <select id="selectPage" resultType="com.xiumu.pojo.sys.entity.UserRole">
        select * from sys_user_role
        <where>
            <include refid="userRoleQuery"></include>
            and delete_flag = 0
        </where>
        order by create_time desc
    </select>

    <select id="selectByUserRole" resultType="com.xiumu.pojo.sys.entity.UserRole">
        select * from sys_user_role
        <where>
            <include refid="userRoleQuery"></include>
            and delete_flag = 0
        </where>
        order by create_time desc
    </select>

    <update id="updateById">
        update sys_user_role
        <trim prefix="SET" suffixOverrides=",">
                <if test=" userRole.userId != null ">
                    user_id = #{userRole.userId}
                </if>
                <if test=" userRole.roleId != null ">
                    role_id = #{userRole.roleId}
                </if>
        </trim>
    </update>
</mapper>
