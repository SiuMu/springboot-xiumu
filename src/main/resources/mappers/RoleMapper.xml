<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xiumu.springbootxiumu.mapper.RoleMapper">

    <select id="selectRolesByUserId" resultType="com.xiumu.springbootxiumu.pojo.entity.Role">
        select r.*
        from sys_role r
            inner join sys_user_role ur on ur.role_id = r.id and ur.user_id = #{userId}
    </select>

</mapper>
